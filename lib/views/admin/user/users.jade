extends ../layout

append js
	script(src="#{cdn}/js/controllers/admin/user.js" defer)

block content
	div(ng-controller="UsersController")
		.row
			.col-sm-12
				h1.page-header(style="margin-top: 0;") Users
		.row
			.col-sm-12
				table.table(ng-table="tableParams" show-filter="true")
					tbody
						tr(ng-repeat="user in $data")
							td(data-title="'Created'" sortable="'created'") {{ user.created }}
							td(data-title="'Name'" filter="{ 'name': 'text' }" sortable="'name'")
								a(href="/admin/user/{{ user._id }}") {{ user.name }}
							td(data-title="'Username'" filter="{ 'username': 'text' }" sortable="'username'") {{ user.username }}
							td(data-title="'Email Address'" filter="{ 'email': 'text' }" sortable="'email'") {{ user.email }}
							td(data-title="'Balance'" filter="{ 'balance': 'text' }" sortable="'balance'") {{ user.balance }}