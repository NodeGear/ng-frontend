#domainModal.modal.fade
	.modal-dialog
		.modal-content
			.modal-header
				button.close(type="button" data-dismiss="modal") &times;
				h4.modal-title(ng-show="addDomain") Add new Domain
				h4.modal-title(ng-hide="addDomain") Edit Domain - {{ domain.domain }}
			.modal-body
				form.form-horizontal
					.form-group
						label.control-label.col-md-4.col-lg-3.col-sm-3 Domain
						.col-md-7.col-lg-8.col-sm-7
							input.form-control(type="text" ng-model="domain.domain" placeholder="greatdomain.ngapp.io" required)
					.form-group
						.col-md-7.col-lg-8.col-sm-7.col-md-offset-4.col-lg-offset-3.col-sm-offset-3
							button.btn(ng-class="{ 'btn-default': !domain.ssl, 'btn-success': domain.ssl }" ng-init="domain.ssl = true" ng-click="domain.ssl = !domain.ssl") Enable SSL
							| &nbsp;
							button.btn(ng-class="{ 'btn-default': !domain.ssl_only, 'btn-success': domain.ssl_only }" ng-click="domain.ssl_only = !domain.ssl_only" ng-disabled="!domain.ssl") Force SSL
							br
							small(style="line-height: initial;") SSL Is Currently Only Available for Subdomains of ngapp.io
			.modal-footer
				button.btn.btn-danger.pull-left(ng-hide="addDomain" ng-click="deleteDomain()") Delete Domain
				span.text-muted(ng-class="{ 'pull-left': addDomain }" ng-bind="status") Loading..
				button.btn.btn-default(data-dismiss="modal") Close
				button.btn.btn-success(ng-click="saveDomain()" ng-disabled="!domain.domain || checking")
					span(ng-show="addDomain") Create
					span(ng-hide="addDomain") Save
