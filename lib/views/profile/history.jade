div(ng-controller="BillingHistoryController" ng-init="init()")
	.row
		.col-sm-12.col-md-12.col-lg-12.col-xs-12
			h3 Billing History
	
	.row
		.col-md-12.col-sm-12.col-lg-12.col-xs-12
			table.table.table-striped(ng-cloak)
				thead
					tr
						th Date
						th Description
						th Amount
						th Status
						th Type
						th Card
						th &nbsp;
				tbody
					tr(ng-repeat="transaction in history")
						td {{ transaction.created }}
						td {{ transaction.details }}
						td ${{ transaction.total }}
						td {{ transaction.status }}
						td {{ transaction.type }}
						td {{ transaction.card }}
						td
							button.btn.btn-default.btn-xs.pull-right(ui-sref="profile.billing.history.transaction({ transaction_id: transaction._id })") More
ui-view(autoscroll="false")