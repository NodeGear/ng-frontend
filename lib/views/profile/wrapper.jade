mixin wrapper(active)
	.row
		.col-sm-4.col-md-4.col-lg-3
			ul.nav.nav-pills.nav-stacked
				li(class= active == 0 ? "active" : null)
					a(href="/profile") Profile
				li(class= active == 1 ? "active" : null)
					a(href="/profile/ssh") SSH Public Key
		.col-sm-8.col-md-8.col-lg-9
			if block
				block