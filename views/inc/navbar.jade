mixin navbar(active)
	header
		nav.navbar.navbar-default.navbar-static-top(style="margin-bottom: 0")
			.full-width-container
				.navbar-header
					button.navbar-toggle(type="button", data-toggle="collapse", data-target=".nodecloud-navbar-collapse")
						span.sr-only Toggle Navigation
						span.icon-bar
						span.icon-bar
						span.icon-bar
					a.navbar-brand(href="/") NodeGear
				.collapse.navbar-collapse.nodecloud-navbar-collapse
					if loggedIn
						ul.nav.navbar-right.navbar-top-links
							li.dropdown(ng-class="{ active: $state.includes('profile') }")
								a.dropdown-toggle(href="#", data-toggle="dropdown")
									i.fa.fa-user.fa-fw
									i.fa.fa-caret-down
								ul.dropdown-menu
									li
										a(ui-sref="profile") Profile
									li.divider
									li
										a(href="/logout") Logout