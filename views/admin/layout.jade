doctype
html(ng-app="nodegear")
	head
		meta(http-equiv="Content-Type", content="text/html; charset=utf-8;")
		meta(name="_csrf", content="#{token}")
		meta(name="viewport" content="width=device-width, initial-scale=1.0")
		block meta
		title NodeGear Admin
		link(href="/favicon.ico" type="image/x-icon" rel="icon")
		link(href="/favicon.ico" type="image/x-icon" rel="shortcut icon")
		
		//- all css goes here
		block css
			link(rel="stylesheet" href="#{cdn}/css/#{version}/bootstrap.min.css")
			link(rel="stylesheet" href="#{cdn}/css/#{version}/bootstrap-theme.min.css")
			link(rel="stylesheet" href="#{cdn}/css/#{version}/font-awesome.min.css")

	body
		#wrapper
			header
				nav.navbar.navbar-default.navbar-static-top(style="margin-bottom: 0")
					.full-width-container
						.navbar-header
							button.navbar-toggle(type="button", data-toggle="collapse", data-target=".nodegear-navbar-collapse")
								span.sr-only Toggle Navigation
								span.icon-bar
								span.icon-bar
								span.icon-bar
							a.navbar-brand(href="/admin") NodeGear Admin
						.collapse.navbar-collapse.nodecloud-navbar-collapse
							ul.nav.navbar-right.navbar-top-links
								li: a(href="/") Back to NodeGear
								li.dropdown
									a.dropdown-toggle(href, data-toggle="dropdown")
										i.fa.fa-user.fa-fw
										i.fa.fa-caret-down
									ul.dropdown-menu
										li
											a(href="/logout") Logout
			
			nav.navbar-default.navbar-static-side(role="navigation")
				.sidebar-collapse
					ul.nav#side-menu
						li
							a(href="/admin") Dashboard
						li.divider
						li
							a(href="/admin/users") Users
						li
							a(href="/admin/apps") Apps
						li
							a(href="/admin/tickets") Support Tickets
						li
							a(href="/admin/paymentMethods") Payment Methods
						li
							a(href="/admin/transactions") Transactions
						li.divider
						li
							a(href="/admin/performance") System Performance
			
			#page-wrapper
				block content
			
			.container
				.row
					.col-xs-12.col-md-12.col-sm-12.col-lg-12
						footer
							br
							p.text-center NodeGear 
								span.text-muted v#{version}-##{versionHash}
							br
		
		block js
			script(src="#{cdn}/js/#{version}/vendor/jquery.js" defer)
			script(src="#{cdn}/js/#{version}/vendor/bootstrap.js" defer)
			script(src="#{cdn}/js/#{version}/vendor/sb-admin.js" defer)
			script(src="#{cdn}/js/#{version}/vendor/angular.js" defer)
			script(src="#{cdn}/js/#{version}/vendor/moment.js" defer)
			script(src="/socket.io/socket.io.js" defer)
			script(src="#{cdn}/js/#{version}/controllers/admin.js" defer)
			
		//- page-specific js
		block addonjs