extends layout

block content
	.row
		.col-lg-12.col-md-12.col-sm-12
			h1.page-header Database
	.row
		.col-lg-12.col-md-12.col-sm-12
			table.table
				thead
					th Deleted
					th Name
					th Type
					th Host
					th User
				tbody
					for database in databases
						tr
							td= database.deleted
							td= database.name
							td= database.database_type
							td= database.db_host
							td= database.user.name