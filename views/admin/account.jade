extends layout

block content
	.row
		.col-lg-12.col-md-12.col-sm-12
			h1.page-header Your Account
	.row
		.col-lg-12.col-md-12.col-sm-12
			form.form-horizontal(method="POST" action="/admin/account")
				input(type="hidden" name="_csrf" value=token)
				.form-group
					label.control-label.col-sm-4.col-md-4.col-lg-4 Password
					.col-md-6.col-lg-6.col-sm-6
						input.form-control(type="password" name="password" placeholder="Enter New Password")
				.form-group
					.col-md-6.col-lg-6.col-sm-6.col-sm-offset-4.col-md-offset-4.col-lg-offset-4
						input.btn.btn-success(type="submit")