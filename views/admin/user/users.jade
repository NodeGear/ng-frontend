extends ../layout

block content
	.row
		.col-lg-12.col-md-12.col-sm-12
			h1.page-header Users
	.row
		.col-lg-12.col-md-12.col-sm-12
			table.table
				thead
					th: a(href="/admin/users") Created
					th: a(href="/admin/users?sort=-email") Email
					th: a(href="/admin/users?sort=-name") Name
					th &nbsp;
				tbody
					for user in users
						tr
							td= user.created
							td= user.email
							td= user.name
							td
								.btn-group.pull-right
									a.btn.btn-xs.btn-default(href="/admin/user/"+user._id) Access
									a.btn.btn-xs.btn-default(href="/admin/user/"+user._id+"/edit") Edit