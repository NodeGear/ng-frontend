include ../inc/flash

.full-width-container
	+flash()
	.row
		.col-lg-2.col-sm-3.col-md-3
			ul.nav.nav-pills.nav-stacked
				li(ng-class="{ active: $state.includes('app.dashboard') }")
					a(ui-sref="app.dashboard") Dashboard
				li(ng-class="{ active: $state.includes('app.logs') }")
					a(ui-sref="app.logs") Logs
				li(ng-class="{ active: $state.includes('app.traffic') }")
					a(ui-sref="app.traffic") Traffic
				li(ng-class="{ active: $state.includes('app.usage') }")
					a(ui-sref="app.usage") Usage
				li(ng-class="{ active: $state.includes('app.settings') }")
					a(ui-sref="app.settings") Settings
			br
			.panel
				.panel-heading
					h1.panel-title= app.name
				.panel-body
					p <strong>Name:</strong> 
						= app.name
					p <strong>User:</strong> 
						= app.user
					p <strong>Deleted:</strong> 
						= app.deleted
					p <strong>Location:</strong> 
						= app.location
					p <strong>Running:</strong> 
						= app.isRunning
					p <strong>Installed:</strong> 
						= app.isInstalled
					p <strong>Installed on:</strong> 
						= app.installedOn
					p <strong>Process ID:</strong> 
						= app.pid
					hr
					mixin loop(arr)
						- for(var key in arr)
							p
								strong= key
								| : 
								if key == 'subdomain'
									a(href="http://"+arr[key]+".nodecloud.net")= arr[key]
										| .nodecloud.net
								else if key == 'domains'
									for domain in arr[key]
										a(href="http://"+domain)= domain
								else
									= arr[key]
					+loop(app.pkg)
		.col-lg-10.col-sm-9.col-md-9
			ui-view