.row
	.col-sm-12.col-xs-12.col-md-12.col-lg-12
		h1.page-header Process Logs
			.btn-group.pull-right
				a.btn.btn-default.btn-md(ng-click="watchLog(log)" title="Stream Log File")
					i.fa.fa-fw(ng-class="{ 'fa-eye-slash': !log.watching, 'fa-eye': log.watching }")
				a.btn.btn-success.btn-md(ng-disabled="log == null", target="_blank", href="/app/"+app._id+"/log/{{ log._id }}/download?partial=true")
					i.fa.fa-download.fa-fw
					|  Download Selected
				a.btn.btn-default.btn-md
					i.fa.fa-cloud-download.fa-fw
					|  Download All

.row
	.col-sm-3.col-xs-3.col-md-3.col-lg-3
		ul.list-unstyled
			li(ng-repeat="process in _app.processes")
				a(href="") {{ process.name }}
	.col-sm-6.col-xs-6.col-md-6.col-lg-6
		pre(ng-bind-html="log.content")
	.col-sm-3.col-xs-3.col-md-3.col-lg-3
		ul.list-unstyled
			li(ng-repeat="l in app.logs")
				a(href="", ng-click="selectLog(l)")
					| {{ l.created.format('DD/MM/YYYY HH:mm:ss') }}
				span(ng-show="l._id == log._id")
					|  &#10003;