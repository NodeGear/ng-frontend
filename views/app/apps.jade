.pagestyle
	.row
		.col-xs-12
			h4
				i.fa.fa-gears.fa-fw
				|  Gears
				.pull-right
					button.btn.btn-success(ui-sref="add") Add Gear

	.row
		.col-sm-6
			h3.text-center(style="color:#5cb85c;" ng-bind="appsOn") 0
				| {{ appsOn }}
			h4.text-center Online Gears
		.col-sm-6
			h3.text-center(style="color:#d9534f;" ng-bind="appsOff") 0
			h4.text-center Offline Gears
	br
	.row
		.col-xs-12
			table.table
				tbody
					tr(ng-repeat="app in apps")
						td
							span.link-larger.label.label-success(title="Processes Online") {{ app.running }}
							| &nbsp;
							span.link-larger.label.label-danger(title="Processes Offline") {{ app.stopped }}
							| &nbsp;&nbsp;
							a.link-larger(ui-sref="app.processes({ id: app.nameUrl })") {{ app.name }}
							span.link-larger {{ app.server }}
							span.pull-right(ng-repeat="stat in app.stat_processes" style="padding: 10px;")
								| CPU: {{ stat.monitor.cpu_percent }}%
								| RAM: {{ stat.monitor.rssString }}