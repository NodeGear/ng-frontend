#environmentModal.modal.fade
	.modal-dialog
		.modal-content
			.modal-header
				button.close(type="button" data-dismiss="modal") &times;
				h4.modal-title(ng-show="addEnvironment") Add new Environment Variable
				h4.modal-title(ng-hide="addEnvironment") Edit Environment Variable - {{ env.name }}
			.modal-body
				form.form-horizontal
					.form-group
						label.control-label.col-md-4.col-lg-3.col-sm-3 Name
						.col-md-7.col-lg-8.col-sm-7
							input.form-control(type="text" ng-model="env.name" placeholder="e.g. NODE_ENV" required)
					.form-group
						label.control-label.col-md-4.col-lg-3.col-sm-3 Value
						.col-md-7.col-lg-8.col-sm-7
							input.form-control(type="text" ng-model="env.value" placeholder="e.g. staging" required)
			.modal-footer
				button.btn.btn-danger.pull-left(ng-hide="addEnvironment" ng-click="deleteEnv()") Delete Variable
				span.text-muted(ng-class="{ 'pull-left': addEnvironment }" ng-bind="status") Loading..
				button.btn.btn-default(data-dismiss="modal") Close
				button.btn.btn-success(ng-click="saveEnvironment()" ng-disabled="!env.name || !env.value")
					span(ng-show="addEnvironment") Create
					span(ng-hide="addEnvironment") Save
