include appsNav
include ../inc/flash

.full-width-container
	+flash()
	
	.row
		.col-lg-4.col-sm-4.col-md-4
			p.lead Create a new <code>node.js</code> application here.
			p.lead You can also create new applications by pushing to your <code>git</code> space
			small nodecloud@nodecloud.net:#{user.email}/{repo-name}.git
		.col-lg-8.col-sm-8.col-md-8
			.panel.panel-default
				.panel-heading
					h1.panel-title Add app
				.panel-body
					form.form-horizontal(action="/app/add", method="POST", autocomplete="off", enctype="multipart/form-data")
						input(type="hidden", name="_csrf", value=token)
						input(type="hidden", name="auth", value="login")
						.form-group
							label.col-md-3.col-xs-3.col-lg-3.col-sm-3.control-label(for="name") Name
							.col-lg-9.col-md-9.col-xs-9.col-sm-9
								input#name.form-control(type="text", name="name", placeholder="What's your app called", ng-model="name")
						.form-group
							label.col-md-3.col-xs-3.col-lg-3.col-sm-3.control-label(for="upload") Upload your app
							.col-lg-9.col-md-9.col-xs-9.col-sm-9
								input#upload.form-control(type="file", name="upload")
						.form-group
							label.col-md-3.col-xs-3.col-lg-3.col-sm-3.control-label(for="upload") App location
							.col-lg-9.col-md-9.col-xs-9.col-sm-9
								.btn-group(data-toggle="buttons")
									.btn.btn-default
										input(type="radio", name="location")
										| Canada
									.btn.btn-default
										input(type="radio", name="location")
										| France
									.btn.btn-default
										input(type="radio", name="location")
										| Amsterdam
						.form-group
							.col-lg-9.col-md-9.col-xs-9.col-sm-9.col-lg-offset-3.col-md-offset-3.col-xs-offset-3.col-sm-offset-3
								input#createButton.btn.btn-success(type="submit", value="Add", disabled= isDemo ? "disabled" : null)
								if (isDemo)
									| &nbsp;
									span.text-help Adding Applications has been disabled in the demo