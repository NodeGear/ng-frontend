.pagestyle
	.row
		.col-xs-12
			h4 Create a Support Ticket
			form.form-horizontal(name="ticketform" ng-init="setCsrf('#{token}')")
				.form-group
					.col-md-offset-3.col-sm-offset-3.col-lg-offset-3.col-md-6.col-sm-6.col-lg-6
						input.form-control(type="text" required ng-model="ticket.subject" placeholder="Subject")
				.form-group
					label.control-label.col-md-3.col-sm-3.col-lg-3 Related App
					.col-md-6.col-sm-6.col-lg-6
						select.form-control(ng-model="ticket.app" ng-options="app._id as app.name for app in apps")
							option(value="") -- Not Related to any App --
				.form-group
					.col-md-offset-3.col-sm-offset-3.col-lg-offset-3.col-md-6.col-sm-6.col-lg-6
						textarea.form-control(ng-model="ticket.message" required placeholder="Ticket Content" rows="4")
				.form-group
					.col-md-offset-3.col-sm-offset-3.col-lg-offset-3.col-md-6.col-sm-6.col-lg-6
						.checkbox
							label
								input(type="checkbox" ng-model="ticket.urgent")
								| Urgent
				.form-group
					.col-md-offset-3.col-sm-offset-3.col-lg-offset-3.col-md-6.col-sm-6.col-lg-6
						button.btn.btn-success(ng-click="createTicket()" ng-disabled="ticketform.$invalid || disableSend") Submit
						| &nbsp;
						em {{ status }}